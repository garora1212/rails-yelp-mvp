
<div class="container">
  <div class="card text-align m-3">
    <h1 class="text-primary p-3"><%= @restaurant.name %></h1>
    <div class="m-4">

      <h4>Location: <%= @restaurant.address %></h4>
      <h4>Phone Number: <%= @restaurant.phone_number %></h4>
      <h4>Cuisine: <%= @restaurant.category %></h4>
      <br>
      <h4>Reviews:</h4>
      <ul class="list">
      <% @restaurant.reviews.each do |review| %>
        <li><%= review.content%> | <%= review.rating %></li>
      <% end %>
      </ul>

    </div>

  <div class="d-flex justify-content-center">
      <%= link_to "Add a rating", new_restaurant_review_path(@restaurant), class:"btn btn-primary" %>
      <%= link_to "All restaurants", restaurants_path, class:"btn btn-primary ml-3" %>
  </div>
  </div>
</div>










